fromn math import gcd
#LCM AND GCD for three numbers
def lcm(x,y,z):
gcd2 = gcd(y,z) 
gcd3 = gcd(x,gcd2)
lcm3 = x*lcm2//gcd2
lcm3 = x*lcm2//gcd(x,lcm2)
return(lcm3,gcd3)
